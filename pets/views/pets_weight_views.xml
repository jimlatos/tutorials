<odoo>
    <record id="weight_action" model="ir.actions.act_window">
        <field name="name">Weight Records</field>
        <field name="res_model">pets.weight</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="weight_view_tree" model="ir.ui.view">
        <field name="name">pets.weight.tree</field>
        <field name="model">pets.weight</field>
        <field name="arch" type="xml">
            <tree string="Weight Records View">
                <field name="date"/>
                <field name="animal_id" string="Animal Name"/>
                <field name="weight"/>
            </tree>
        </field>
    </record>
</odoo>